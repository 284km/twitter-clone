<% if @tweet.save %>
  $("#tweet_tweet_text").val("");
  $("#feed").prepend("<%=j render @tweet %>");
 	$('#message').html("<%=j render 'partials/messages', message: 'Tweet posted successfully to your timeline' %>");
  $('#tweet-count').text('140');
 	$("#new-tweet-modal").modal('hide');
 	$('#tweets-count').html("<%= current_user.reload.tweets_count %>");
<% else %>
	$('#message').html("<%=j render 'partials/messages', message: @tweet.errors.full_messages.first %>");
<% end %>