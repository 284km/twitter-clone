<% if @tweet.destroy %>
  $("#tweet-<%= @tweet_id %>").remove();
  $('#tweets-count').html("<%= current_user.reload.tweets_count %>");
  $('#message').html("<%=j render 'partials/messages', message: 'Tweet deleted successfully' %>");
<% else %>
  $('#message').html("<%=j render 'partials/messages', message: 'Tweet deletion failed. Try again later' %>");
<% end %>