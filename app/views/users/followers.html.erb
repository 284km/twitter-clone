<div style="<%= user_cover(@user) %>" class="cover-pic">
</div>
<%= render 'user_nav', view_type: 'followers' %>
<div class="row">
  <div class="col-lg-3">
    <%= render 'user_info' %>
  </div>
  <div class="col-lg-6">
    <div id="content" class="tw-form">
      <div id="feed" class="well">
        <h4><b>Followers</b></h4>
        <div class="row">
          <div class="col-lg-10 col-lg-offset-1">
            <%= render(@followers) || "No Followers" %>
          </div>
        </div>
      </div>
      <div id="load-more">
        <%= render 'partials/load_more', items: @followers %>
      </div>
    </div>
  </div>
</div>
