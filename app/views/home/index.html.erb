<div class="row">
  <div class="col-lg-3">
    <div class="card">
      <div class="cover" data-cover="<%= current_user.cover %>">
        <%= image_tag current_user.avatar, class: "avatar" %>
      </div>
      <div class="about">
        <h3 class="name"><%= current_user.name %></h3>
        <h5 class="username"><b>@<%= current_user.username %></b></h5>
        <span class="content"><%= current_user.about %></span>
      </div>
      <div class="stats">
        <div class="row">
          <div class="col-lg-4 text-center">
            <%= link_to user_path(current_user) do %>
              <h5><b>Tweets</b></h5>
              <h4><%= @tweet_count || 0 %></h4>
            <% end %>
          </div>
          <div class="col-lg-4 text-center">
            <%= link_to followers_user_path(current_user) do %>
              <h5><b>Followers</b></h5>
              <h4><%= @followers_count || 0 %></h4>
            <% end %>
          </div>
          <div class="col-lg-4 text-center">
            <%= link_to following_user_path(current_user) do %>
              <h5><b>Following</b></h5>
              <h4><%= @following_count || 0 %></h4>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="row">
      <div class="col-lg-12">
        <div class="well">
          <%= render 'partials/new_tweet', tweet_id: nil %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div id="feed" class="well feed">
          <%= render(@tweets) || "No Tweets" %>
        </div>
        <div id="load-more">
          <%= render 'partials/load_more', items: @tweets %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="well">
    </div>
  </div>
</div>
