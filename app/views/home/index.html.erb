<div class="row">
  <div class="col-lg-3">
  </div>
  <div class="col-lg-6">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <div class="well">
          <%= form_tag({ action: :create, controller: :tweets }, { remote: true }) do %>
            <div class="form-group">
              <%= text_area_tag "tweet[tweet_text]", nil, class: "form-control", placeholder: "Enter Tweet 140 characters" %>
            </div>
            <div class="form-group">
              <%= submit_tag "Tweet", id: "tweet", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-3">
  </div>
</div>
