<!DOCTYPE html>
<html>
  <head>
    <title>Twitter Clone</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="bg-img" data-img="<%= fetch_background %>"></div>
    <%= render 'partials/navbar' %>
    <div id="message"></div>
    <%= render 'partials/messages', message: nil %>
    <div class="container">
      <%= yield %>
      <%= render 'partials/tweet_modal' %>
    </div>
  </body>
</html>
